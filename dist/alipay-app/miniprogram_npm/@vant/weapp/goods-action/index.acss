.goods-action-index {
    height: inherit;
}
@import "../common/index.acss";

.goods-action-index .van-goods-action {
    position: fixed;
    right: 0;
    bottom: 0;
    left: 0;
    display: -webkit-flex;
    display: flex;
    -webkit-align-items: center;
    align-items: center;
    background-color: #fff;
    background-color: var(--goods-action-background-color, #fff);
}

.goods-action-index .van-goods-action--safe {
    padding-bottom: env(safe-area-inset-bottom);
}
